<p style="color: green"><%= notice %></p>

<h3>Todo</h3>

<ul id="tasks">
  <% @todo_tasks.each do |task| %>
    <li>
      <%= render task %>
    </li>
  <% end %>
</ul>

<h3>Completed</h3>

<ul id="tasks">
  <% @completed_tasks.each do |task| %>
    <li>
      <%= render task %>
    </li>
  <% end %>
</ul>

<%= link_to "New task", new_task_path %>
