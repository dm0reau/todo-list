<h3>Todo</h3>

<ul id="tasks">
  <li>
    <%= render "form", task: Task.new %>
  </li>
  <% @todo_tasks.each do |task| %>
    <li>
      <%= render task %>
      <%= button_to "✅", task, method: :patch, params: { task: { done: true } } %>
      <%= button_to "❌", task, method: :delete, class: "task-delete" %>
    </li>
  <% end %>
</ul>

<h3>Completed</h3>

<ul id="tasks">
  <% @completed_tasks.each do |task| %>
    <li>
      <%= render task %>
      <%= button_to "🚫", task, method: :patch, params: { task: { done: false } } %>
      <%= button_to "❌", task, method: :delete, class: "task-delete" %>
    </li>
  <% end %>
</ul>