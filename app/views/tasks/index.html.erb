<h3>Todo</h3>

<ul id="tasks">
  <li>
    <%= render "form", task: Task.new %>
  </li>
  <% @todo_tasks.each do |task| %>
    <li data-controller="task">
      <%= render "edit_form", task: task %>
      <span data-task-target="show">
        <%= render task %>
        <%= button_to "✅", task, method: :patch, params: { task: { done: true } } %>
        <%= button_tag "📝", type: "button", "data-action" => "click->task#edit" %>
        <%= button_to "❌", task, method: :delete, class: "task-delete" %>
      </span>
    </li>
  <% end %>
</ul>

<h3>Completed</h3>

<ul id="tasks" data-controller="task">
  <% @completed_tasks.each do |task| %>
    <li data-controller="task">
      <%= render "edit_form", task: task %>
      <span data-task-target="show">
        <%= render task %>
        <%= button_to "🚫", task, method: :patch, params: { task: { done: false } } %>
        <%= button_tag "📝", type: "button", "data-action" => "click->task#edit" %>
        <%= button_to "❌", task, method: :delete, class: "task-delete" %>
      </span>
    </li>
  <% end %>
</ul>