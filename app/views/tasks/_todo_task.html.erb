<li data-controller="task">
  <%= render "edit_form", task: todo_task %>
  <span data-task-target="show">
    <%= render todo_task %>
    <%= button_to "✅", todo_task, method: :patch, params: { task: { done: true } } %>
    <%= button_tag "📝", type: "button", "data-action" => "click->task#edit" %>
    <%= button_to "❌", todo_task, method: :delete, class: "task-delete" %>
  </span>
</li>
